/* styles.css */

/* Глобальные стили */
body {
  font-family: Arial, sans-serif;
  background-color: #0e1521;
  color: #fff;
  margin: 0;
  padding: 0;
}

.container {
  position: relative;
  z-index: 1;
}

/* Частицы */
#particles {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, #0e1521, #1a233a);
  z-index: 0;
}

/* Таблица */
.table {
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 10px;
  overflow: hidden;
}

.table th,
.table td {
  vertical-align: middle;
  text-align: center;
}

.table img {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  object-fit: cover;
}

/* Команды */
.team-card {
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 10px;
  padding: 15px;
  margin-bottom: 20px;
  transition: transform 0.3s ease;
}

.team-card:hover {
  transform: scale(1.05);
}